<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Login">
    <LinearLayout
        android:background="#fff"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/Img_logo_login"
            android:layout_width="173dp"
            android:layout_height="152dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@mipmap/uca"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/Edt_email_login"
            android:hint="User"
            android:textSize="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/EditexMarginTop"
            android:layout_marginLeft="@dimen/EditexMarginLeft"
            android:layout_marginRight="@dimen/EditexMarginRight"
            style="@style/TextAppearance.AppCompat.Large"
            />
        <EditText
            android:id="@+id/Edit_password_login"
            android:hint="Password"
            android:textSize="25dp"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/EditexMarginTop"
            android:layout_marginLeft="@dimen/EditexMarginLeft"
            android:layout_marginRight="@dimen/EditexMarginRight"
            style="@style/TextAppearance.AppCompat.Large"/>


        <TextView
            android:id="@+id/Text_New_Count"
            android:text="No account yet? Create one"
            android:textSize="20dp"
            android:textColor="#6E74C9"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead" />

        <EditText
            android:editable="false"
            android:hint="OR"
            android:lines="@android:integer/config_mediumAnimTime"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/EditexMarginLeft"
            android:layout_marginRight="@dimen/EditexMarginRight"
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/BtnLogin"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/Button_Color_Ok"
            android:text="SIGN IN"
            android:textSize="15dp"
            android:layout_marginVertical="10dp"/>

    </LinearLayout>

</ScrollView>