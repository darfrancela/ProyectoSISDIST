@{
    ViewBag.Title = "Gestion";
}


<div class="col-lg-12">
    <h2>Listado de Votaciones </h2>
    <a href="../Votaciones/Crear" class="btn btn-success m-3 float-left">Nueva votación</a>
</div>


<table class="table table-sm">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nombre Votación</th>
            <th scope="col">Estado</th>
            <th scope="col">Grupo</th>
            <th scope="col">Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<VotacionUCAWebApplication.Models.Votaciones>)ViewBag.ListaVotaciones)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.Descripcion</td>
                <td>
                    @if (item.Abierto)
                    {
                        <text>Abierta</text>
                    }
                    else
                    {
                        <text>Cerrada</text>
                    }
                </td>
                <td>@item.CodGrupo</td>
                <td>
                    <a href="../Votaciones/@item.Id/Candidatos" class="btn-sm btn-warning"><i class="lni-eye" style="color:white"></i></a>
                    <a href="#" class="btn-sm btn-primary"><i class="lni-pencil"></i></a>
                    <a href="#" class="btn-sm btn-danger"><i class="lni-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
